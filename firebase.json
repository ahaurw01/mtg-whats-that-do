{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/*",
        "destination": "/index.html"
      },
      {
        "source": "/share/**",
        "function": "share"
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix $RESOURCE_DIR run lint"]
  }
}
